@model Movie_Theater.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Thay đổi mật khẩu";
}

<div class="wrapper-container">
    <div style=" width: 55%; margin: auto;">
        <h5 id="title" class="heading"><i class="fa-solid fa-key"></i> @ViewBag.Title</h5>
        <main aria-labelledby="title">
            @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                <hr />
                <div class="row">
                    @Html.LabelFor(m => m.OldPassword, new { @class = "col-md-4 col-form-label" })
                    <div class="col-md-8">
                        @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.OldPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br>
                <div class="row">
                    @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-4 col-form-label" })
                    <div class="col-md-8">
                        @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br>
                <div class="row">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-4 col-form-label" })
                    <div class="col-md-8">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="col-md-12 btn-submit" style=" display: flex; justify-content: end;">
                        <input type="submit" value="Cập nhật" class="btn btn-outline-dark" />
                        <input style="margin-left: 5px;" class="btn btn-outline-dark" type="button" onclick="history.go(-1)" value="Trở lại" />
                    </div>
                </div>
            }
        </main>
    </div>
</div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
