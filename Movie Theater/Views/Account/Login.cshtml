@using Movie_Theater.Models
@model LoginViewModel
@{
    ViewBag.Title = "Đăng nhập";
}


<div class="wrapper-container">
    <h5 id="title" class="heading"><i class="fa-solid fa-right-to-bracket"></i> @ViewBag.Title</h5>
    <main aria-labelledby="title">
        <div class="row">
            <div class="col-md-12">
                <section id="loginForm">
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger", style = "text-align: end;margin-bottom: 15px;" })
                        <div class="row">
                            @Html.LabelFor(m => m.Username, new { @class = "col-md-3 col-form-label" })
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row">
                            @Html.LabelFor(m => m.Password, new { @class = "col-md-3 col-form-label" })
                            <div class="col-md-9">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="offset-md-3 col-md-9">
                                <div class="checkbox">
                                    @Html.CheckBoxFor(m => m.RememberMe, new { style = "margin-left: unset;" })
                                    @Html.LabelFor(m => m.RememberMe)
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 btn-submit" style=" display: flex; justify-content: end;">
                                <input type="submit" value="Đăng nhập" class="btn" />
                            </div>
                        </div>
                        <p>
                            @Html.ActionLink("Đăng ký tài khoản mới", "Register")
                        </p>
                        @* Enable this once you have account confirmation enabled for password reset functionality
                            <p>
                                @Html.ActionLink("Forgot your password?", "ForgotPassword")
                            </p>*@
                    }
                </section>
            </div>
        </div>
    </main>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
