@model IEnumerable<Movie_Theater.Models.Slider>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml"; ;
}

<section>

    <!-- Default box -->
    <div class="main-content">
        <h4 class="page-title">Danh sách slide</h4>
        <nav class="page-breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Slider</a></li>
                <li class="breadcrumb-item active" aria-current="page">Danh sách</li>
            </ol>
        </nav>
    </div>
    <div class="aside-compose text-align-end">
        <a href="/Admin/Slider/Create" class="btn btn-success">Thêm Slide</a>
    </div>
    <hr />
    <div class="row margin-left-right-unset">
        <div class="col-12 col-xl-12 stretch-card">
            <div class="row flex-grow">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th class="col-md-3">Tiêu đề</th>
                            <th class="col-md-3">Mô tả</th>
                            <th class="col-md-4">Hình ảnh</th>
                            <th class="col-md-2"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            var i = 1;
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="col-md-3">
                                        @Html.DisplayFor(modelItem => item.Title)
                                    </td>
                                    <td class="col-md-3">
                                        <div class="biography biography-crews">
                                            @Html.DisplayFor(modelItem => item.Description)
                                        </div>
                                    </td>
                                    <td class="col-md-4 avatar_path">
                                        <img class="width-100-percent" src="@item.Img" alt="@item.Img" />
                                    </td>
                                    <td class="col-md-2">
                                        <div>
                                            @Html.ActionLink("Sửa", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" })
                                            <button type="submit" class="btn btn-danger delete-btn" data-id="@item.Id" style="margin: 5px 0;">Xóa</button>
                                        </div>
                                    </td>
                                </tr>
                                i++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- /.card-body -->
</section>
<!-- /.content -->

<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
<script>
    $(function () {
        $('.delete-btn').click(function (e) {
            e.preventDefault();

            if (confirm("Bạn có chắc chắn muốn xóa slide này?")) {
                var id = $(this).data('id');
                $.ajax({
                    url: '/Admin/Slider/Delete',
                    type: 'POST',
                    data: { id: id },
                    success: function (result) {
                        if (result.success) {
                            window.location.reload();
                        } else {
                            alert(result.message);
                        }
                    },
                    error: function () {
                        alert('Đã xảy ra lỗi khi xóa slide.');
                    }
                });
            }
        });
    });
</script>

