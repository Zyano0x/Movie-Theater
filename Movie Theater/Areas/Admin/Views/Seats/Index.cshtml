@model IEnumerable<Movie_Theater.Models.Seat>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- Main content -->
<section>

    <!-- Default box -->
    <div class="main-content">
        <h4 class="page-title">Danh Sách Ghế Ngồi</h4>
        <nav class="page-breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Ghế Ngồi</a></li>
                <li class="breadcrumb-item active" aria-current="page">Danh sách</li>
            </ol>
        </nav>
    </div>
    <div class="aside-compose text-align-end">
        <a href="/Admin/Seats/Create" class="btn btn-success">Thêm Ghế</a>
    </div>
    <hr />
    <div class="row margin-left-right-unset">
        <div class="col-12 col-xl-12 stretch-card">
            <div class="row flex-grow">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th class="col-md-3">Mã Ghế</th>
                            <th class="col-md-3">Trạng Thái</th>
                            <th class="col-md-3">Giá Tiền</th>
                            <th class="col-md-3"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="col-md-3">@item.Id</td>
                                    <td class="col-md-3">
                                        @if (item.State == true)
                                        {
                                            <span style="color: green">Kích hoạt</span>
                                        }
                                        else
                                        {
                                            <span style="color: red">Vô hiệu hóa</span>
                                        }
                                    </td>
                                    <td class="col-md-3">@item.Cost - VND</td>
                                    <td class="col-md-3">
                                        <div>
                                            @Html.ActionLink("Sửa", "Edit", new { id = item.Id }, new { @class = "btn btn-warning mr-2", style = "margin: 5px 0 5px 0" })
                                            <div>
                                                @if (item.State == true)
                                                {
                                                    <button type="submit" class="btn btn-danger disable-btn" data-id="@item.Id" style="margin: 5px 0;">Vô hiệu hóa</button>
                                                }
                                                else
                                                {
                                                    <button type="submit" class="btn btn-primary enable-btn" data-id="@item.Id" style="margin: 5px 0;">Kích hoạt</button>
                                                }
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- /.card-body -->
</section>
<!-- /.content -->
<script>
    $(function () {
        $('.disable-btn').click(function (e) {
            e.preventDefault();

            if (confirm("Bạn có chắc chắn muốn vô hiệu hóa ghế này?")) {
                var id = $(this).data('id');
                $.ajax({
                    url: '/Admin/Seats/Disable',
                    type: 'POST',
                    data: { id: id },
                    success: function (result) {
                        if (result.success) {
                            window.location.reload();
                        } else {
                            alert(result.message);
                        }
                    },
                    error: function () {
                        alert('Đã xảy ra lỗi khi vô hiệu hóa ghế.');
                    }
                });
            }
        });
    });
    $(function () {
        $('.enable-btn').click(function (e) {
            e.preventDefault();

            if (confirm("Bạn có chắc chắn muốn kích hoạt ghế này?")) {
                var id = $(this).data('id');
                $.ajax({
                    url: '/Admin/Seats/Enable',
                    type: 'POST',
                    data: { id: id },
                    success: function (result) {
                        if (result.success) {
                            window.location.reload();
                        } else {
                            alert(result.message);
                        }
                    },
                    error: function () {
                        alert('Đã xảy ra lỗi khi kích hoạt ghế.');
                    }
                });
            }
        });
    });
</script>

