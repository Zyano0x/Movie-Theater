@model Movie_Theater.Models.Theatre

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section>

    <!-- Default box -->
    <div class="main-content">
        <h4 class="page-title">Thêm Rạp Phim</h4>
        <nav class="page-breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Admin/Theatres">Rạp Phim</a></li>
                <li class="breadcrumb-item active" aria-current="page">Thêm Rạp</li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-12 col-xl-12 stretch-card">
            <div class="row flex-grow">
                <div class="col-md-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            @using (Html.BeginForm("Create", "Theatres"))
                            {
                                @Html.AntiForgeryToken()
                                <div class="form-horizontal">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Name, "Tên Rạp", htmlAttributes: new { @class = "control-label col-md-2 padding-left-right-unset" })
                                        <div class="col-md-12 padding-left-right-unset">
                                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group text-align-end">
                                        <div class="col-md-offset-2 col-md-12">
                                            <button type="submit" class="btn btn-primary mr-2 mb-2 mb-md-0 text-white">Thêm Rạp</button>
                                            <a href="/Admin/Theatres" class="btn btn-secondary mb-1 mb-md-0">Quay Lại</a>
                                        </div>
                                    </div>
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.card-body -->
</section>
