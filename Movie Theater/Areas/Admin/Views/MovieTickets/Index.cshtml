@model IEnumerable<Movie_Theater.Models.MovieTicket>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml"; ;
}

<!-- Main content -->
<section>

    <!-- Default box -->
    <div class="main-content">
        <h4 class="page-title">Danh sách vé phim</h4>
        <nav class="page-breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Vé phim</a></li>
                <li class="breadcrumb-item active" aria-current="page">Danh sách</li>
            </ol>
        </nav>
    </div>
    <hr />
    <div class="row margin-left-right-unset">
        <div class="col-12 col-xl-12 stretch-card">
            <div class="row flex-grow">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Mã vé</th>
                            <th>Email</th>
                            <th>Số lượng</th>
                            <th>Phim</th>
                            <th>Thời gian</th>
                            <th>Trạng thái</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            var i = 1;
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TicketId)
                                    </td>
                                    <td>
                                        @item.User.Email
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Quantity)
                                    </td>
                                    <td>
                                        @item.Movie.Title
                                    </td>
                                    <td>
                                        @item.MovieSchedule.BeginTime - @item.MovieSchedule.EndTime
                                    </td>
                                    <td>
                                        @if (item.Status == 0)
                                        {
                                            <span>Chưa thanh toán</span>
                                        }
                                        @if (item.Status == 1)
                                        {
                                            <span>Đã thanh toán</span>
                                        }
                                    </td>
                                    <td>
                                        @Html.ActionLink("Sửa", "Edit", new { id = item.TicketId }, new { @class = "btn btn-warning", style = "margin: 5px 0 5px 0" })
                                        <button type="submit" class="btn btn-danger delete-btn" data-id="@item.TicketId" style="margin: 5px 0;">Xóa</button>
                                    </td>
                                </tr>
                                i++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- /.card-body -->
</section>
<!-- /.content -->

<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
<script>
    $(function () {
        $('.delete-btn').click(function (e) {
            e.preventDefault();
            var btn = $(this);
            var id = btn.data('id');

            if (confirm("Bạn có chắc chắn muốn xóa vé phim này?")) {
                $.ajax({
                    url: '/Admin/MovieTickets/Delete',
                    type: 'POST',
                    data: { id: id },
                    success: function (result) {
                        if (result.success) {
                            btn.closest('tr').remove(); // Remove the deleted row from the table
                        } else {
                            alert(result.message);
                        }
                    },
                    error: function () {
                        alert('Đã xảy ra lỗi khi xóa vé phim.');
                    }
                });
            }
        });
    });
</script>