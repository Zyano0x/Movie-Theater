@model IEnumerable<Movie_Theater.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="page-content">
    
    <!-- Default box -->
    <div class="col-xl-10 main-content pl-xl-4 pr-xl-5">
        <h1 class="page-title">Movies List</h1>
        <nav class="page-breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Movies</a></li>
                <li class="breadcrumb-item active" aria-current="page">List</li>
            </ol>
        </nav>
    </div>
    <div class="aside-compose">
        <a href="/Admin/Movies/Create" class="btn btn-success">Add New</a>
    </div>
    <hr />
    <div class="row">
        <div class="col-12 col-xl-12 stretch-card">
            <div class="row flex-grow">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Release Day</th>
                            <th>Rating</th>
                            <th>Runtime</th>
                            <th>BoxOffice</th>
                            <th>OriginalLanguage</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            var i = 1;
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Title)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ReleaseDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Rating)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Runtime)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BoxOffice)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.OriginalLanguage)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning", style = "margin: 5px 0 5px 0" })
                                        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-secondary", style = "margin: 5px 0 5px 0" })
                                        <button type="submit" class="btn btn-danger delete-btn" data-id="@item.Id" style="margin: 5px 0;">Delete</button>
                                    </td>
                                </tr>
                                i++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- /.card-body -->
</section>
<!-- /.content -->

<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
<script>
    $(function () {
        $('.delete-btn').click(function (e) {
            e.preventDefault();

            if (confirm("Are you sure you want to delete this movie?")) {
                var id = $(this).data('id');
                $.ajax({
                    url: '/Admin/Movies/Delete',
                    type: 'POST',
                    data: { id: id },
                    success: function (result) {
                        if (result.success) {
                            window.location.reload();
                        } else {
                            alert(result.message);
                        }
                    },
                    error: function () {
                        alert('An error occurred while deleting the record.');
                    }
                });
            }
        });
    });
</script>