@model IEnumerable<Movie_Theater.Models.Room>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<style>
    .list-seat button {
        border: none;
        min-width: 46px;
        height: 19px;
        padding-top: unset;
        padding-bottom: unset;
        border-radius: 4px;
        margin-bottom: 4px;
        color: #fff;
    }
</style>
<section>

    <!-- Default box -->
    <div class="main-content">
        <h4 class="page-title">Danh sách phòng chiếu</h4>
        <nav class="page-breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Phòng chiếu</a></li>
                <li class="breadcrumb-item active" aria-current="page">Danh sách</li>
            </ol>
        </nav>
    </div>
    <div class="aside-compose text-align-end">
        <a href="/Admin/Rooms/Create" class="btn btn-success">Thêm Phòng chiếu</a>
    </div>
    <hr />
    <div class="row margin-left-right-unset">
        <div class="col-12 col-xl-12 stretch-card">
            <div class="row flex-grow">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th class="col-md-1">Mã phòng</th>
                            <th class="col-md-2">Trạng thái</th>
                            <th class="col-md-6">Danh sách ghế ngồi</th>
                            <th class="col-md-3"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            var i = 1;
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="col-md-1">
                                        @Html.DisplayFor(modelItem => item.Id)
                                    </td>
                                    <td class="col-md-2">
                                        @if (item.State == true)
                                        {
                                            <span style="color: green">Kích hoạt</span>
                                        }
                                        else
                                        {
                                            <span style="color: red">Vô hiệu hóa</span>
                                        }
                                    </td>
                                    @{
                                        List<Movie_Theater.Models.RoomSeat> listSeat = (List<Movie_Theater.Models.RoomSeat>)ViewData["ListSeat"];
                                    }
                                    <td class="col-md-6 list-seat">
                                        <div class="biography biography-crews" style="text-align: start; padding-left: 10px; height: 90px;">
                                            @foreach (var seat in listSeat)
                                            {
                                                if (seat.RoomId == item.Id)
                                                {
                                                    if (seat.Seat_State_Book == true)
                                                    {
                                                        <button style="background-color: green"><span>@seat.SeatId</span></button>
                                                    }
                                                    else
                                                    {
                                                        if (seat.Seat_State == true)
                                                        {
                                                            <button style="background-color: red"><span>@seat.SeatId</span></button>
                                                        }
                                                        else
                                                        {
                                                            <button style="background-color: gray"><span>@seat.SeatId</span></button>
                                                        }
                                                    }
                                                }

                                            }
                                        </div>
                                    </td>
                                    <td class="col-md-3">
                                        <div>
                                            @Html.ActionLink("Sửa", "Edit", new { id = item.Id }, new { @class = "btn btn-warning mr-2" })
                                            <div>
                                                @if (item.State == true)
                                                {
                                                    <button type="submit" class="btn btn-danger disable-btn" data-id="@item.Id" style="margin: 5px 0;">Vô hiệu hóa</button>
                                                }
                                                else
                                                {
                                                    <button type="submit" class="btn btn-primary enable-btn" data-id="@item.Id" style="margin: 5px 0;">Kích hoạt</button>
                                                }
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                i++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- /.card-body -->
</section>

<script>
    $(function () {
        $('.disable-btn').click(function (e) {
            e.preventDefault();

            if (confirm("Bạn có chắc chắn muốn vô hiệu hóa phòng này?")) {
                var id = $(this).data('id');
                $.ajax({
                    url: '/Admin/Rooms/Disable',
                    type: 'POST',
                    data: { id: id },
                    success: function (result) {
                        if (result.success) {
                            window.location.reload();
                        } else {
                            alert(result.message);
                        }
                    },
                    error: function () {
                        alert('Đã xảy ra lỗi khi vô hiệu hóa phòng.');
                    }
                });
            }
        });
    });
    $(function () {
        $('.enable-btn').click(function (e) {
            e.preventDefault();

            if (confirm("Bạn có chắc chắn muốn kích hoạt phòng này?")) {
                var id = $(this).data('id');
                $.ajax({
                    url: '/Admin/Rooms/Enable',
                    type: 'POST',
                    data: { id: id },
                    success: function (result) {
                        if (result.success) {
                            window.location.reload();
                        } else {
                            alert(result.message);
                        }
                    },
                    error: function () {
                        alert('Đã xảy ra lỗi khi kích hoạt phòng.');
                    }
                });
            }
        });
    });
</script>


