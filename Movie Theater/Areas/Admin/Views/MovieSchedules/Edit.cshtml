@model Movie_Theater.Models.MovieSchedule

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="page-content">

    <!-- Default box -->
    <div class="main-content">
        <h4 class="page-title">Chỉnh sửa lịch chiếu</h4>
        <nav class="page-breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Admin/Genres">Lịch chiếu</a></li>
                <li class="breadcrumb-item active" aria-current="page">Chỉnh sửa</li>
            </ol>
        </nav>
    </div>
    @using (Html.BeginForm("Edit", "MovieSchedules", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div class="form-group">
                @if (ViewBag.Error != "")
                {
                    <strong class="" style="color: red;"><i class="fa-solid fa-triangle-exclamation"></i> @ViewBag.Error</strong>
                }
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.MovieScheduleId)

            <div class="form-group">
                @Html.LabelFor(model => model.MovieIds, "Phim", htmlAttributes: new { @class = "control-label col-md-12 padding-left-right-unset" })
                <div class="col-md-12 padding-left-right-unset padding-left-right-unset">
                    @Html.DropDownListFor(model => model.MovieId, new SelectList(Model.Movies, "Id", "Title"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MovieIds, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.BeginTime, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-12 padding-left-right-unset padding-left-right-unset">
                    @Html.EditorFor(model => model.BeginTime, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.BeginTime, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group text-align-end">
                <div class="col-md-offset-2 col-md-12 padding-left-right-unset padding-left-right-unset">
                    <input type="submit" value="Lưu Thay Đổi" class="btn btn-primary mr-2 mb-2 mb-md-0 text-white"/>
                    <a href="/Admin/MovieSchedules" class="btn btn-secondary mb-1 mb-md-0">Quay Lại</a>
                </div>
            </div>
        </div>
    }

    <!-- /.card-body -->
</section>
