@model IEnumerable<Movie_Theater.Models.MovieSchedule>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- Main content -->
<section>

    <!-- Default box -->
    <div class="main-content">
        <h4 class="page-title">Danh sách lịch chiếu</h4>
        <nav class="page-breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Lịch chiếu</a></li>
                <li class="breadcrumb-item active" aria-current="page">Danh sách</li>
            </ol>
        </nav>
    </div>
    <div class="aside-compose text-align-end">
        <a href="/Admin/MovieSchedules/Create" class="btn btn-success">Thêm Lịch Chiếu</a>
    </div>
    <hr />
    <div class="row margin-left-right-unset">
        <div class="col-12 col-xl-12 stretch-card">
            <div class="row flex-grow">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th class="col-md-2">Mã Phim</th>
                            <th class="col-md-2">Tên Phim</th>
                            <th class="col-md-3">Thời gian bắt đầu</th>
                            <th class="col-md-3">Thời gian kết thúc</th>
                            <th class="col-md-2"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            var i = 1;
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="col-md-2">@item.Movie.Id</td>
                                    <td class="col-md-2">@item.Movie.Title</td>
                                    <td class="col-md-3">@item.BeginTime</td>
                                    <td class="col-md-3">@item.EndTime</td>
                                    <td class="col-md-2">
                                        <div>
                                            @Html.ActionLink("Sửa", "Edit", new { id = item.Id }, new { @class = "btn btn-warning", style = "margin: 5px 0 5px 0" })
                                            <button type="submit" class="btn btn-danger delete-btn" data-id="@item.Id" style="margin: 5px 0;">Xóa</button>
                                        </div>
                                    </td>
                                </tr>
                                i++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- /.card-body -->
</section>
<!-- /.content -->

<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
<script>
    $(function () {
        $('.delete-btn').click(function (e) {
            e.preventDefault();

            if (confirm("Bạn có chắc chắn muốn xóa lịch chiếu này?")) {
                var id = $(this).data('id');
                $.ajax({
                    url: '/Admin/MovieSchedules/Delete',
                    type: 'POST',
                    data: { id: id },
                    success: function (result) {
                        if (result.success) {
                            window.location.reload();
                        } else {
                            alert(result.message);
                        }
                    },
                    error: function () {
                        alert('An error occurred while deleting the schedule.');
                    }
                });
            }
        });
    });
</script>
