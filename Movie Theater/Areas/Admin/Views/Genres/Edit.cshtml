@model Movie_Theater.Models.Genre

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="page-content">
    
    <!-- Default box -->
    <div class="main-content">
        <h4 class="page-title">Chỉnh sửa thể loại phim</h4>
        <nav class="page-breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Admin/Genres">Thể loại</a></li>
                <li class="breadcrumb-item active" aria-current="page">Chỉnh sửa</li>
            </ol>
        </nav>
    </div>
    @using (Html.BeginForm("Edit", "Genres"))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                @Html.LabelFor(model => model.Name, "Tên Thể Loại", htmlAttributes: new { @class = "control-label col-md-2 padding-left-right-unset" })
                <div class="col-md-12 padding-left-right-unset">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group text-align-end">
                <div class="col-md-offset-2 col-md-12 padding-left-right-unset">
                    <input type="submit" value="Lưu Thay Đổi" class="btn btn-danger mb-1 mb-md-0 mr-2" />
                    <a href="/Admin/Genres" class="btn btn-secondary mb-1 mb-md-0">Quay Lại</a>
                </div>
            </div>
        </div>
    }
    <!-- /.card-body -->
</section>